@using Bakery.Models;


<h2>Orders</h2>


@if (@Model.Count == 0)
{
    <h4>No orders have been placed on your account.</h4>
}

<ul>
    @foreach (Order o in Model)
    {
        <li>@Html.ActionLink($"{o.Treat}s", "Details", new { id = o.OrderId })</li>
    }
</ul>

@Html.ActionLink("Add a new order", "Create")